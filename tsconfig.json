{
    "compilerOptions": {
        "composite": true,
        "incremental": true,
        "declaration": true,
        "target": "es2018",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "./dist",
        "sourceMap": false,
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": ".",
        "jsx": "react",
        "baseUrl": ".",
        "lib": ["ES2020", "DOM"],
        "paths": {
            "@/*": ["src/*"]
        }
    },

    "include": ["**/*.ts", "**/*.tsx"]
}
